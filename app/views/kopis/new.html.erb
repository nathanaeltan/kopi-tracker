<h1>Add A Kopi</h1>

<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

   <%= form.collection_select :roast_id, @roasts, :id, :roast_type %> <br> <br>
   <%= form.collection_select :origin_id, @origins, :id, :location %>
 
<p>
    <%= form.label :Price %><br>
    <%= form.text_field :price %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>